{
    "extends": ["tslint:latest", "tslint-react"],
    "rules": {
        "arrow-parens": [true, "ban-single-arg-parens"],
        "max-line-length": {
            "options": [80]
        },
        "no-any": true,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "no-submodule-imports": false,
        "jsx-curly-spacing": [true, "always"],
        "jsx-boolean-value": [true, "never"],
        "jsx-no-lambda": false
    }
}
